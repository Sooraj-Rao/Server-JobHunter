{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts", "index.ts"]
}
