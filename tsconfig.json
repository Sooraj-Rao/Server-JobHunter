{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
